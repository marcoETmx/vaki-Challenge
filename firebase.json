{
    "functions": {
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint vaki-functions",
        "npm --prefix \"$RESOURCE_DIR\" run build vaki-functions --prod"
      ],
      "source": "/"
    },
    "hosting": {
      "public": "dist/apps/vaki",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "function": "server"
        }
      ]
    }
  }